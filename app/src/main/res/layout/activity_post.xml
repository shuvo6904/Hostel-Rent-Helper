<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarMapLayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbarLayoutId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="#5DAFF1"
            android:background="#5DAFF1"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <fragment
                android:id="@+id/googleMapId"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarId"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FBFBFB"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arbutus_slab"
                        android:gravity="center"
                        android:text="Address from Map"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mapAddressId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Address from Map"
                        android:textColor="#673AB7"
                        android:textSize="17sp"
                        android:textStyle="italic" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B9CDDD" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arbutus_slab"
                    android:gravity="center"
                    android:text="Hostel Information"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:hint="Hostel Name"
                            app:boxBackgroundMode="outline"
                            app:endIconMode="clear_text"
                            app:startIconDrawable="@drawable/ic_home">

                            <EditText
                                android:id="@+id/buildingNameId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:textAlignment="textStart"
                                android:gravity="start"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Floor Number"
                            app:boxBackgroundMode="outline"
                            app:endIconMode="clear_text"
                            app:startIconDrawable="@drawable/ic_floor">

                            <EditText
                                android:id="@+id/floorNumberId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:textAlignment="textStart"
                                android:gravity="start" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/locationTextInputLayoutId"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:hint="Address"
                        app:boxBackgroundMode="outline"
                        app:endIconMode="dropdown_menu"
                        app:startIconDrawable="@drawable/ic_baseline_location">

                        <AutoCompleteTextView
                            android:inputType="textMultiLine"
                            android:textAlignment="textStart"
                            android:gravity="start"
                            android:id="@+id/dropDownTextId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/selectMonthId"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:hint="Select Month "
                            app:boxBackgroundMode="outline"
                            app:endIconMode="dropdown_menu"
                            app:startIconDrawable="@drawable/ic_baseline_date_range_24">

                            <AutoCompleteTextView
                                android:inputType="textMultiLine"
                                android:textAlignment="textStart"
                                android:gravity="start"
                                android:id="@+id/selectMonthTextId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Rented Amount Per Month"
                            app:boxBackgroundMode="outline"
                            app:endIconMode="clear_text"
                            app:startIconDrawable="@drawable/ic_taka">

                            <EditText
                                android:id="@+id/rentedAmountId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:textAlignment="textStart"
                                android:gravity="start"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B9CDDD" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="Select Gender Type"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/genderChipGroupId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/maleChipId"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Male" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/femaleChipId"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/anyoneChipId"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anyone" />

            </com.google.android.material.chip.ChipGroup>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="Select What You Want to Rent"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/desireRentTextInputLayoutId"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.2"
                    android:hint=" Example: Flat"
                    app:boxBackgroundMode="outline"
                    app:endIconMode="dropdown_menu">

                    <AutoCompleteTextView
                        android:inputType="textMultiLine"
                        android:textAlignment="textStart"
                        android:gravity="start"
                        android:id="@+id/desireRentTextId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight=".8"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- <ImageButton
                        android:id="@+id/incrementId"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:src="@drawable/plus_icon" /> -->

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_weight="1"
                        android:id="@+id/incrementId"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/plus_icon" />


                    <TextView
                        android:id="@+id/inDeTVId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/asmani_color"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:clickable="true"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:id="@+id/decrementId"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:src="@drawable/minus_icon" />

                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B9CDDD" />



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arbutus_slab"
                    android:gravity="center"
                    android:text="Utility Bill Information"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:hint="Electricity Bill"
                            app:boxBackgroundMode="outline"
                            app:counterEnabled="true"
                            app:counterMaxLength="10"
                            app:endIconMode="clear_text"
                            app:startIconDrawable="@drawable/ic_elcetricity">

                            <EditText
                                android:id="@+id/electricityBillId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:textAlignment="textStart"
                                android:gravity="start"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:hint="Gas Bill"
                            app:boxBackgroundMode="outline"
                            app:counterEnabled="true"
                            app:counterMaxLength="10"
                            app:endIconMode="clear_text"
                            app:startIconDrawable="@drawable/ic_gas">

                            <EditText
                                android:id="@+id/gasBillId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:textAlignment="textStart"
                                android:gravity="start"/>

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:hint="Wifi Bill"
                            app:boxBackgroundMode="outline"
                            app:counterEnabled="true"
                            app:counterMaxLength="10"
                            app:endIconMode="clear_text"
                            app:startIconDrawable="@drawable/ic_wifi">

                            <EditText
                                android:id="@+id/wifiBillId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:textAlignment="textStart"
                                android:gravity="start"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:hint="Others Bill"
                            app:boxBackgroundMode="outline"
                            app:counterEnabled="true"
                            app:counterMaxLength="10"
                            app:endIconMode="clear_text"
                            app:startIconDrawable="@drawable/ic_other">

                            <EditText
                                android:id="@+id/othersBillId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:textAlignment="textStart"
                                android:gravity="start"/>

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B9CDDD" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/arbutus_slab"
                    android:gravity="center"
                    android:text="Hostel Facilities"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:drawableStart="@drawable/ic_security"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/arbutus_slab"
                            android:text=" Security Type"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:drawableStart="@drawable/ic_parking"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/arbutus_slab"
                            android:text=" Parking"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <RadioGroup
                            android:id="@+id/securityRadioGroupId"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:checkedButton="@id/noneSecurityId">


                                    <RadioButton
                                        android:id="@+id/securityGuardId"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="Security Guard" />

                                    <RadioButton
                                        android:id="@+id/CCTVId"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="CCTV Camera" />


                                    <RadioButton
                                        android:id="@+id/bothId"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="Both" />

                                    <RadioButton
                                        android:id="@+id/noneSecurityId"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="None" />



                        </RadioGroup>

                        <RadioGroup
                            android:id="@+id/parkingRadioGroupId"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:checkedButton="@id/parkingNotAvailableId">

                            <RadioButton
                                android:id="@+id/parkingAvailableId"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Available" />

                            <RadioButton
                                android:id="@+id/parkingNotAvailableId"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Not Available" />

                        </RadioGroup>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:drawableStart="@drawable/ic_elevator"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="15dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/arbutus_slab"
                                android:text=" Elevator"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:drawableStart="@drawable/ic_generator"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="15dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/arbutus_slab"
                                android:text=" Generator"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <RadioGroup
                                android:id="@+id/elevatorRadioGroupId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:checkedButton="@id/elevatorNotAvailableId">

                                <RadioButton
                                    android:id="@+id/elevatorAvailableId"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Available" />

                                <RadioButton
                                    android:id="@+id/elevatorNotAvailableId"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Not Available" />

                            </RadioGroup>

                            <RadioGroup
                                android:id="@+id/generatorRadioGroupId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:checkedButton="@+id/generatorNotAvailableId">

                                <RadioButton
                                    android:id="@+id/generatorAvailableId"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Available" />

                                <RadioButton
                                    android:id="@+id/generatorNotAvailableId"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Not Available" />

                            </RadioGroup>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <View
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B9CDDD" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/imageChooseButton"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight=".8"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:onClick="btnSelectImage"
                        android:text="Choose Image File"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_weight="0.2"
                        android:id="@+id/postHomeImageId"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_baseline_image_24" />



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B9CDDD" />

            <TextView
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/arbutus_slab"
                android:text="Additional Information About Hostel &amp; Advertisement Post"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:hint="Write Here Details About Your Hostel"
                app:boxBackgroundMode="outline"
                app:counterEnabled="true"
                app:counterMaxLength="100"
                app:endIconMode="clear_text">

                <EditText
                    android:inputType="textMultiLine"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:id="@+id/detailsAddressId"
                    android:layout_width="match_parent"
                    android:layout_height="195dp"/>

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:onClick="btnSubmitId"
                android:text="Submit"
                android:textColor="#ffffff"
                android:textSize="18sp" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>