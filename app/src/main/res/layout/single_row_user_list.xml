<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userListProfileImageViewId"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/profile"
                app:civ_border_color="#416D81"
                app:civ_border_width="2dp" />

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:weightSum="3"
                    android:id="@+id/linearAdminPageId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userListNameId"
                        android:text="User Name"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/adminUserBtnId"
                        android:visibility="gone"
                        android:layout_marginRight="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:text="Admin"/>


                </LinearLayout>



                <TextView
                    android:layout_below="@+id/linearAdminPageId"
                    android:id="@+id/userListEmailId"
                    android:text="User Email"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_below="@+id/userListEmailId"
                    android:id="@+id/userListPhoneId"
                    android:text="User Email"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>