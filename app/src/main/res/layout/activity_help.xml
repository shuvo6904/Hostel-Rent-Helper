<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#EFF0F1"
    tools:context=".additionalActivity.HelpActivity">

    <LinearLayout
        android:layout_marginBottom="30dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="For any kind of help\n Please feel free to contact us"
            android:textColor="#5E5A5A"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/welcomeId"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_help_colored" />


        <TextView
            android:id="@+id/helpNumId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:drawableStart="@drawable/call_colored"
            android:text="  01966077883"
            android:textColor="#5E5A5A"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/helpEmailId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:text="  stshuvotalukdar@gmail.com"
            android:textColor="#5E5A5A"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>


</ScrollView>